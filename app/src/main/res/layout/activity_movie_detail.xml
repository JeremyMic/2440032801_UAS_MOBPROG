<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MovieDetailActivity"
    android:background="#ECE8DD">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/detail"
        android:text="Movie Details"
        android:textSize="28dp"
        android:background="@color/black"
        android:textColor="@color/white"
        android:paddingVertical="10dp"
        android:gravity="center_horizontal"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/movieTitleDetail"
        android:textSize="24dp"
        android:gravity="center_horizontal"
        android:textColor="@color/black"
        android:textFontWeight="700"
        android:layout_below="@id/detail"
        android:layout_marginTop="16dp"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/movieImageDetail"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/movieTitleDetail"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="10dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/overview"
        android:textColor="@color/black"
        android:textFontWeight="500"
        android:textSize="20dp"
        android:text="Overview:"
        android:layout_below="@+id/movieImageDetail"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="10dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/movieOverview"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:layout_below="@id/overview"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="10dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/backBtn"
        android:text="Go Back"
        android:backgroundTint="#FF0000"
        android:layout_below="@id/movieOverview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>



</RelativeLayout>